---
import Layout from '../layouts/Layout.astro'

const response = await fetch('https://battle-gods.dduyn.workers.dev/gods')
const gods = await response.json()
---

<Layout title='Battle of Gods'>
	<div class='container m-auto'>
		<header class='flex'>
			{
				gods.map(({ id, name, title, image }) => (
					<a href={`/god/${id}`}>
						<img class='aspect-square w-80' src={`${image}`} alt={`image ${name}`} />
					</a>
				))
			}
		</header>
		<main></main>
	</div>
</Layout>

